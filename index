    <div class="map-container" id="mapContainer">
    <div id="loadingSpinner" class="spinner"></div>
    </div>
    <script>
        // Placeholder HTML for each map
        const maps = [
            `<iframe src='https://profound-genie-b147ba.netlify.app/' style='width:100vw;height:calc(100vh - 64px);border:none;' onload='hideSpinner()'></iframe>`,
            `<iframe src='' style='width:100vw;height:calc(100vh - 64px);border:none;' onload='hideSpinner()'></iframe>`,
            `<iframe src='https://bucolic-figolla-2bf211.netlify.app/' style='width:100vw;height:calc(100vh - 64px);border:none;' onload='hideSpinner()'></iframe>`,
            `<iframe src='https://sweet-tanuki-cd03a9.netlify.app/' style='width:100vw;height:calc(100vh - 64px);border:none;' onload='hideSpinner()'></iframe>`, 
        ];
        function showMap(idx) {
            document.getElementById('loadingSpinner').style.display = 'block';
            document.getElementById('mapContainer').innerHTML = `<div id='loadingSpinner' class='spinner'></div>` + maps[idx];
            document.querySelectorAll('.nav-btn').forEach((btn, i) => {
                btn.classList.toggle('active', i === idx);
            });
        }

        function hideSpinner() {
            const spinner = document.getElementById('loadingSpinner');
            if (spinner) spinner.style.display = 'none';
        }
        // Show first map on load
        showMap(0);
    </script>
